        {
            "style": "List",
            "text": "backgroundColor refers to the background of the design space (see table below)."
        },
        {
            "style": "List",
            "text": "node refers to all nodes in the design space."
        },
        {
            "style": "Text",
            "text": "  * imageSize refers to the size of icons representing nodes."
        },
        {
            "style": "List",
            "text": "type refers to the type of node, as indicated by the string of text below each node."
        },
        {
            "style": "List",
            "text": "name refers to the name or label of the node, as indicated above the node."
        },
        {
            "style": "List",
            "text": "menuItem refers to items on the right-hand side of the menu."
        },
        {
            "style": "Text",
            "text": "  * fontSize refers to the size of the font of the string of text."
        },
        {
            "style": "Text",
            "text": "  * imageSize refers to the size of the icon illustrating the menu item."
